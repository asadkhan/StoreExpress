<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- "background shadow" -->
    <item>
        <shape android:shape="oval" >
            <solid android:color="#ffffff" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- background color -->
    <item
        android:bottom="2px"
        android:left="1px"
        android:right="-1px"
        android:top="-1px">
        <shape android:shape="oval" >
            <solid android:color="#ff0000" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- over left shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="180"
                android:centerColor="#ff0000"
                android:centerX="0.5"
                android:endColor="#ff0099"
                android:startColor="#ffffff" />

            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="360"
                android:centerColor="#ffffff"
                android:centerX="0.9"
                android:endColor="#ffffff"
                android:startColor="#ffffff" />

            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- over top shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="-90"
                android:centerColor="#ffffff"
                android:centerY="0.9"
                android:endColor="#00FF0000"
                android:startColor="#ffffff"
                android:type="linear" />

            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- over bottom shadow -->
    <item>
        <shape android:shape="oval" >
            <gradient
                android:angle="90"
                android:centerColor="#ffffff"
                android:centerY="0.9"
                android:endColor="#00FF0000"
                android:startColor="#ffffff"
                android:type="linear" />

            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>