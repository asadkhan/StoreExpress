<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dip"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:layout_weight="3"
            android:gravity="left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cartitem_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/product_shoe" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_cartitem_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="3"
                android:minLines="3"
                android:text="American Garden\nItalian Dressing 473ml"
                android:textColor="#555455"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cartitem_minus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/minus_s"
                    android:fadeScrollbars="false"
                    android:includeFontPadding="false"
                    android:text="@null"
                    android:textIsSelectable="false" />

                <TextView
                    android:id="@+id/txt_cartitem_qty_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="15dip"
                    android:paddingStart="15dip"
                    android:text="1"
                    android:textColor="#555455" />

                <Button
                    android:id="@+id/btn_cart_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/plus_s"
                    android:fadeScrollbars="false"
                    android:includeFontPadding="false"
                    android:text="@null"
                    android:textIsSelectable="false" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="top|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_cartitem_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text="Rs. "
                    android:textColor="#555455"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_cartitem_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:maxLines="3"
                    android:minLines="3"
                    android:textColor="#555455"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_cartitem_remove"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="Remove"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Divider" />

</LinearLayout>